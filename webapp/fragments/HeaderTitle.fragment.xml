<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
    <HBox id="titleContainer" class="titleContainer">
        <!-- LEFT CONTAINER -->
        <VBox class="calendarContainer">
            <Button text="NOVEMBER" icon="sap-icon://calendar" press="onMonthsPress"/>
        </VBox>
        <!-- RIGHT CONTAINER -->
        <VBox class="titleVbox">
            <Text class="titleHeaderText" text="{i18n>title}" />
        </VBox>
    </HBox>
</core:FragmentDefinition>