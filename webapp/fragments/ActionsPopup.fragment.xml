<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover id="actionsPopover" class="actionsPopover" placement="Left" showHeader="false">
        <VBox width="7.25rem" justifyContent="Center">
            <!-- FIRST BUTTON -->
            <HBox  justifyContent="Center">
                <Button class="action-popups-btn" text="{i18n>addReport}" width="100%" press="addReport" />
            </HBox>
            <!-- SECOND BUTTON -->
            <HBox  justifyContent="Center">
                <Button class="action-popups-btn" text="{i18n>shiftChange}" width="100%" press="changeShift" />
            </HBox>
            <!-- THIRD BUTTON -->
            <HBox  justifyContent="Center">
                <Button  class="action-popups-btn" text="{i18n>addCertificate}" width="100%" press="addCertificate" />
            </HBox>
            <!-- FOURTH BUTTON -->
            <HBox justifyContent="Center">
                <Button  class="action-popups-btn" text="{i18n>vacationRequest}" width="100%" press="" />
            </HBox>
            <!-- FIFTH BUTTON -->
            <HBox justifyContent="Center">
                <Button  class="action-popups-btn" text="{i18n>restDayReport}" width="100%" press="" />
            </HBox>     
            <!-- SIXTH BUTTON -->
            <HBox justifyContent="Center">
                <Button  class="action-popups-btn" text="{i18n>addNote}" width="100%" press="" />
            </HBox>                        
        </VBox>
    </Popover>
</core:FragmentDefinition>
