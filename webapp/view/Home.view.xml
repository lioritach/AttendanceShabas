<mvc:View controllerName="attendanceshabas.attendanceshabas.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
     <!-- MAIN SCREEN -->
    <VBox id="homeContainer" class="homeContainer">
       <!-- TITLE CONTAINER -->
        <VBox id="titleContainer" class="titleContainer"></VBox>
        <!-- EMP DETAILS HEADER -->
       <VBox id="empDetailsHeader" class="empDetailsHeader" >
            <!-- PROFILE ICON -->
            <VBox id="profileIconContainer" class="profileIconContainer">
                <HBox id="profileIcon" class="profileIcon">
                    <Image id="profileImage" src="https://png.pngtree.com/png-clipart/20230927/original/pngtree-man-avatar-image-for-profile-png-image_13001877.png" class="imageIcon" />
                </HBox>
            </VBox>
            <!-- FULL NAME  -->
            <VBox id="fullNameContainer" class="fullNameContainer">
                <!-- FULL NAME TITLE -->       
                <VBox id="fullNameTitleHbox" class="fullNameTitleHbox">
                    <Text id="fullNameTitle" class="fullNameTitle" text="{i18n>name}" />
                </VBox>
                 <!-- FULL NAME VALUE -->
                <VBox id="fullNameValueHbox" class="fullNameValueVBox">
                    <Text id="fullNameValue" class="fullNameValue" text="{EmpDetails>/0/fullName}" />
                </VBox>
            </VBox>
            <!-- EMP TYPE -->
            <VBox id="empTypeContainer" class="empTypeContainerVBox">
                <!-- EMP TYPE TITLE -->
                <VBox id="empTypeTitleVbox" class="empTypeTitleVbox">
                    <Text id="empTypeTitle" class="empTypeTitle" text="{i18n>empType}" />
                </VBox>
                <!-- EMP TYPE VALUE -->
                <VBox id="empTypeValueVbox" class="empTypeValueVbox">
                    <Text id="empTypeValue" class="empTypeValue" text="{EmpDetails>/0/empType}" />
                </VBox>
            </VBox>
            <!-- WORK SCHEDULE -->
            <VBox id="workScheduleContainer" class="workScheduleContainerVBox">
                <!-- WORK SCHEDULE TITLE -->
                <VBox id="workScheduleTitleVbox" class="workScheduleTitleVbox">
                    <Text id="workScheduleTitle" class="workScheduleTitle" text="{i18n>workSchedule}" />
                </VBox>
                <!-- WORK SCHEDULE VALUE -->
                <VBox id="workScheduleValueVbox" class="workScheduleValueVbox">
                    <Text id="workScheduleValue" class="workScheduleValue" text="{EmpDetails>/0/workSchedule}" />
                </VBox>
            </VBox>
            <!-- CITY -->
            <VBox id="cityContainer" class="cityContainerVBox">
                <!-- CITY TITLE -->
                <VBox id="cityTitleVbox" class="cityTitleVbox">
                    <Text id="cityTitle" class="cityTitle" text="{i18n>city}" />
                </VBox>
                <!-- CITY VALUE -->
                <VBox id="cityValueVbox" class="cityValueVbox">
                    <Text id="cityValue" class="cityValue" text="{EmpDetails>/0/city}" />
                </VBox>
            </VBox>
            <!-- WORK AREA -->
            <VBox id="workAreaContainer" class="workAreaContainerVBox">
                <!-- WORK AREA TITLE -->
                <VBox id="workAreaTitleVbox" class="workAreaTitleVbox">
                    <Text id="workAreaTitle" class="workAreaTitle" text="{i18n>workArea}" />
                </VBox>
                <!-- WORK AREA VALUE -->
                <VBox id="workAreaValueVbox" class="workAreaValueVbox">
                    <Text id="workAreaValue" class="workAreaValue" text="{EmpDetails>/0/workArea}" />
                </VBox>            
            </VBox>
            <!-- CARD NUMBER -->
            <VBox id="cardNumberContainer" class="cardNumberContainerVBox">
                 <!-- CARD TITLE -->
                <VBox id="cardNumberTitleVbox" class="cardNumberTitleVbox">
                    <Text id="cardNumberTitle" class="empTypeTitle" text="{i18n>cardNumber}" />
                </VBox>
                <!-- CARD VALUE -->
                <VBox id="cardNumberValueVbox" class="cardNumberValueVbox">
                    <Text id="cardNumberValue" class="cardNumberValue" text="{EmpDetails>/0/cardNumber}" />
                </VBox>           
            </VBox>
            <!-- EMAIL -->
            <VBox id="emailContainer" class="emailContainerVBox">
                 <!-- EMAIL TITLE -->
                <VBox id="emailTitleVbox" class="emailTitleVbox">
                    <Text id="emailTitle" class="emailTitle" text="{i18n>email}" />
                </VBox>
                <!-- EMAIL VALUE -->
                <VBox id="emailValueVbox" class="emailValueVbox">
                    <Text id="emailValue" class="emailValue" text="{EmpDetails>/0/email}" />
                </VBox>           
            </VBox>
       </VBox>
    </VBox>
</mvc:View>
