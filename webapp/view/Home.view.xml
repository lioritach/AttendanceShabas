<mvc:View
    controllerName="attendanceshabas.attendanceshabas.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
>
    <!-- MAIN SCREEN -->
    <VBox
        id="homeContainer"
        class="homeContainer"
    >
        <!-- TITLE CONTAINER -->
        <core:Fragment
            fragmentName="attendanceshabas.attendanceshabas.fragments.HeaderTitle"
            type="XML"
        />
        <!-- EMP DETAILS HEADER -->
        <core:Fragment
            fragmentName="attendanceshabas.attendanceshabas.fragments.EmpDetails"
            type="XML"
        />
        <!-- TABLE -->
        <HBox
            id="bodyHbox"
            class="bodyHbox"
        >
            <!-- ICON TAB -->
            <HBox class="iconTabHbox">
                <IconTabBar
                    id="icons"
                    class="icons"
                    select="switchTab"
                >
                    <items>
                        <IconTabFilter
                            key="absence"
                            text="{i18n>allAbsence}"
                            class="tabText"
                        />
                        <IconTabFilter
                            key="onlyCorrectionsinc"
                            text="{i18n>onlyCorrectionsinc}"
                            class="tabText"
                        />
                    </items>
                </IconTabBar>
            </HBox>
            <VBox
                id="tableVbox"
                class="tableVbox"
                width="100%"
            >
                <HBox class="tbl">
                    <Table items="{path: 'oData>/'}">
                        <columns>
                            <Column>
                                <Label text="{i18n>date}" />
                            </Column>
                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true"
                            >
                                <Label text="{i18n>enterTime}" />
                            </Column>
                            <Column
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="End"
                            >
                                <Label text="{i18n>exitTime}" />
                            </Column>
                            <Column
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="Center"
                            >
                                <Label text="{i18n>actions}" />
                            </Column>
                            <Column hAlign="Left">
                                <Label text="{i18n>totalHours}" />
                            </Column>
                            <Column hAlign="Left">
                                <Label text="{i18n>totalHoursNeto}" />
                            </Column>
                            <Column hAlign="Left">
                                <Label text="{i18n>certificates}" />
                            </Column>
                            <Column hAlign="Left">
                                <Label text="{i18n>absenceWithPayment}" />
                            </Column>
                            <Column hAlign="Left">
                                <Label text="{i18n>absenceWithoutPayment}" />
                            </Column>
                            <Column hAlign="Left">
                                <Label text="{i18n>globalAbsence}" />
                            </Column>
                            <Column hAlign="Left">
                                <Label text="{i18n>note}" />
                            </Column>
                            <Column hAlign="Left">
                                <Label text="{i18n>requests}" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <VBox >
                                        <Text text="{oData>date}" />
                                    </VBox>
                                    <VBox >
                                        <Text text="{oData>enterTime}" />
                                    </VBox>
                                    <VBox>
                                        <Text text="{oData>exitTime}" />
                                    </VBox>
                                    <VBox>
                                        <Image
                                            id="ellipsisIcon"
                                            class="ellipsisIcon"
                                            src="css/images/ellipsis-h.svg"
                                            lazyLoading="true"
                                            press="actionsPopup"
                                        />
                                    </VBox>
                                    <VBox>
                                        <Text text="{oData>totalHours}" />
                                    </VBox>
                                    <VBox>
                                        <Text text="{oData>totalHoursNeto}" />
                                    </VBox>
                                    <VBox>
                                        <Text text="{oData>certificates}" />
                                    </VBox>
                                    <VBox>
                                        <Text
                                            text="{oData>absenceWithPayment}"
                                        />
                                    </VBox>
                                    <VBox>
                                        <Text
                                            text="{oData>absenceWithoutPayment}"
                                        />
                                    </VBox> 
                                    <VBox>
                                        <Text text="{oData>globalAbsence}" />
                                    </VBox>
                                    <VBox>
                                        <Text text="{oData>note}" />
                                    </VBox>
                                    <VBox>
                                        <Text text="{oData>requests}" />
                                    </VBox>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </HBox>
                <HBox width="10%">
                    <Text text="asasas" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</mvc:View>
